<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <!-- BUTTONS -->
    <!-- BUTTONS  -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >
        <Button
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:background="@drawable/circle"
            android:drawableTop="@android:drawable/ic_dialog_alert"
            android:paddingTop="0dp"
            android:layout_marginBottom="5dp"

            android:text="Manual Calibration"
            android:textSize="12dp"
            android:textColor="@android:color/white"
            android:onClick="manualMessage"
            />

        <Button
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:background="@drawable/circle"
            android:drawableTop="@android:drawable/ic_dialog_email"
            android:paddingTop="0dp"
            android:textSize="12dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:text="Automatic Calibration"
            android:textColor="@android:color/white"
            android:onClick="discoMessage"
            />

        <Button
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            android:textSize="12dp"
            android:background="@drawable/circle"
            android:drawableTop="@android:drawable/ic_dialog_dialer"
            android:paddingTop="0dp"
            android:text="large scale calibration"
            android:textColor="@android:color/white"
            android:onClick="initMessage"
            />
    </LinearLayout>




    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="visible">


        <EditText
            android:id="@+id/gpswarning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/button"
            android:layout_below="@+id/textView1"
            android:layout_marginTop="0dp"
            android:ems="7"
            android:inputType="text"
            android:text=""
            android:textColor="#000000"
            android:textSize="13sp" />

        <EditText
            android:id="@+id/netwarning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/button"
            android:layout_below="@+id/textView1"
            android:layout_marginTop="0dp"
            android:ems="7"
            android:inputType="text"
            android:text=""
            android:textColor="#000000"
            android:textSize="13sp" />




    </LinearLayout>


    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:orientation="vertical"
        android:visibility="visible">



        <TextView
            android:id="@+id/gps_text"
            android:layout_width="420dp"
            android:layout_height="20dp"
            android:layout_alignLeft="@+id/button"
            android:layout_below="@+id/textView1"
            android:layout_marginTop="0dp"
            android:ems="7"
            android:inputType="text"
            android:text=""
            android:textColor="#000000"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/gpsnext_line_text"
            android:layout_width="420dp"
            android:layout_height="20dp"
            android:layout_marginTop="0dp"
            android:ems="7"
            android:inputType="text"
            android:textColor="#000000"
            android:textSize="10sp" />
        <TextView
            android:id="@+id/orientation_text_message"
            android:layout_width="420dp"
            android:layout_height="20dp"
            android:layout_alignLeft="@+id/button"
            android:layout_below="@+id/textView1"
            android:layout_marginTop="0dp"
            android:ems="7"
            android:inputType="text"
            android:text=""
            android:textColor="#000000"
            android:textSize="10sp" />


    </LinearLayout>






    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/circle"
            android:drawableTop="@android:drawable/ic_popup_disk_full"
            android:paddingTop="0dp"
            android:textSize="12dp"

            android:text="Options"
            android:textColor="@android:color/white"
            android:onClick="optionMessage"
            />

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/circle"
            android:drawableTop="@drawable/ic_drawable"
            android:textSize="12dp"

            android:paddingTop="0dp"
            android:text="Record"
            android:textColor="@android:color/white"
            android:onClick="record_Message"
            />


        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/circle"
            android:drawableTop="@android:drawable/ic_dialog_map"
            android:textSize="12dp"
            android:paddingTop="0dp"
            android:text="Curve"
            android:textColor="@android:color/white"
            android:onClick="fileMessage"
            />
    </LinearLayout>




    <TextView
        android:id="@+id/hour_text_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textSize="13sp">
    </TextView>


    <TextView
        android:id="@+id/text_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textSize="15sp"
        android:text="" >
    </TextView>

    <ProgressBar
        android:id="@+id/progress_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="20dip"
        style="@android:style/Widget.ProgressBar.Small" >
    </ProgressBar>




</LinearLayout>

