<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ManualCalibrationActivity">



    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="vertical">

        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView android:id="@+id/textViewIntercept"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp" android:layout_marginStart="14dp"
                android:text="Calibration Intercept:" android:textSize="10sp"/>
            <EditText android:id="@+id/edittextintercept" android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:ems="5"
                android:inputType="text" android:text="0.0" android:textSize="10sp"/>
            <TextView android:id="@+id/textViewBeta" android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_marginLeft="14dp"
                android:layout_marginStart="14dp"
                android:text="Slope:" android:textSize="10sp"/>
            <EditText android:id="@+id/editbetatext" android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="5" android:inputType="text" android:text="1.0" android:textSize="10sp"/>
            <TextView android:id="@+id/r2textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp" android:layout_marginStart="14dp"
                android:text="RÂ²:" android:textSize="10sp"/>
            <EditText android:id="@+id/edittextr2" android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:ems="4"
                android:inputType="text" android:text="1.0" android:textSize="10sp"/>

        </LinearLayout>




        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView android:id="@+id/meantextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp" android:layout_marginStart="14dp"
                android:text="Residual  -  mean:      " android:textSize="10sp"/>
            <EditText android:id="@+id/editmean" android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:ems="5"
                android:inputType="text" android:text="0.0" android:textSize="10sp"/>
            <TextView android:id="@+id/textViewsum" android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_marginLeft="14dp"
                android:layout_marginStart="14dp"
                android:text=" Sum:" android:textSize="10sp"/>
            <EditText android:id="@+id/editsum" android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="5" android:inputType="text" android:text="0.0" android:textSize="10sp"/>
            <TextView android:id="@+id/textViewstd" android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_marginLeft="14dp"
                android:layout_marginStart="14dp"
                android:text="Std:" android:textSize="10sp"/>
            <EditText android:id="@+id/editstd" android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="4" android:inputType="text" android:text="0.0" android:textSize="10sp"/>

        </LinearLayout>

        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:orientation="horizontal">
            <CheckBox android:id="@+id/multiHopCalibration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="multiHopCalibration_message"
                android:text="Multi-Hop Calibration" android:textSize="10sp"/>

        </LinearLayout>


        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="horizontal">
        </LinearLayout>

        <LinearLayout android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </LinearLayout>
    </LinearLayout>




</android.support.constraint.ConstraintLayout>